<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="@dimen/dp_12"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="@dimen/dp_175"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar"
        android:layout_height="@dimen/dp_85"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:lines="2"
        android:maxEms="7"
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toBottomOf="@id/iv_thumb"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintLeft_toLeftOf="@id/iv_thumb"
        android:id="@+id/tv_title"/>


    <android.widget.TextView
        android:id="@+id/tv_student_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_people_count"
        android:paddingRight="8dp"
        android:textColor="@color/colorGray999"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <android.widget.TextView
        android:id="@+id/tv_comment_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_like"
        android:drawablePadding="4dp"
        android:textColor="@color/fontColorGray"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/tv_student_num"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>